<h2>Kendo Grid - Inline CRUD Operations</h2>

<!--Create new (button)-->
 <div>
    <button class="k-button">@Html.ActionLink("Create New Album", "Create")</button>
</div>

<table id="grid">
    <!--Column Headers-->
    <tr>
        <th>Artist
        </th>
        <th>Genre
        </th>
        <th>Title
        </th>
        <th>Price
        </th>
        <th>Operations</th>
    </tr>
    <!--Loop through Model, Display each item as follows-->
    @foreach (var item in Model)
    {
        <tr>
            <td>@Truncate(item.Artist.Name, 25)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>@Truncate(item.Title, 25)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.AlbumId }) | @Html.ActionLink("Details", "Details", new { id = item.AlbumId }) | @Html.ActionLink("Delete", "Delete", new { id = item.AlbumId })
            </td>
        </tr>
    }
</table>


    <script>

        $(document).ready(function () {
            $("#grid").kendoGrid({
                //Sortable
                sortable: true,
                //Filterable
                filterable: true,
                //Pageable
                pageable: { pageSizes: [20, 40, 60, "All"] },
                //Batch Off
                batch: false,
                //Selectable - Single Mode (Row)
                selectable: "single, row"
            });
        });

    </script>


